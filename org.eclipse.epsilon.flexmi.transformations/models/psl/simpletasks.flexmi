<?nsuri psl?>
<_>
	<project title="ACME">
		<person name="Alice"/>
		<simpletask title="Analysis" dur="3"/>
		<simpletask title="Design" dur="3"/>
		<simpletask title="Implementation" dur="6"/>
	</project>
	
	<:template name="simpletask">
		<content>
			<task :start="Task.all
				.indexOf(self)
				.asVar('index') == 0 ? 1 :
					Task.all.get(index-1)
					.asVar('previous')
					.start + previous.duration">
				<effort :person="Person.all.first()"/>
			</task>
		</content>
	</:template>
</_>